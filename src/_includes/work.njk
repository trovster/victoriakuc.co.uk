<div class="work">
    <div class="work__image">
        <img src="{{ item.data | image | url | absoluteUrl(site.baseUrl) }}" alt="" title="" />
    </div>
    <div class="work__detail">
        <h3 class="work__title">{{ item.data.title }}</h3>
        <p class="work__medium">{{ item.data.medium }}</p>
        <p class="work__description">{{ item.templateContent | striptags }}</p>
    </div>
</div>
