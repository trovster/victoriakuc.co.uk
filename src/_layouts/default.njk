<!doctype html>
<html dir="ltr" lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

        <meta property="og:title" content="{{ site.title }}"/>
        <meta property="og:description" name="description" content="{{ meta.description }}"/>
        <meta property="og:image" content="{{ "/img/signature.png" | url | absoluteUrl(config.baseUrl) }}"/>
        <meta property="og:site_name" content="{{ site.title }}" />

        <meta name="twitter:card" content="summary_large_image"/>
        <meta name="twitter:site" content="@victoriakuc"/>
        <meta name="twitter:image:alt" content="Signature for Victoria Kuc &mdash; Art &amp; Sculpture" />

        <meta name="keywords" content="{{ meta.keywords }}"/>
        <meta name="apple-mobile-web-app-title" content="{{ site.title }}"/>
        <meta name="application-name" content="{{ site.title }}"/>
        <meta name="msapplication-TileColor" content="#4c4755"/>
        <meta name="theme-color" content="#ffffff"/>

        <title>{{ title }}</title>

        <script type="text/javascript">
            document.getElementsByTagName('html')[0].className += ' js';
        </script>

        <link rel="icon" href="{{ "/favicon.ico" | url | absoluteUrl(config.baseUrl) }}"/>
        <link rel="apple-touch-icon" href="{{ "/apple-touch-icon.png" | url | absoluteUrl(config.baseUrl) }}"/>
        <link rel="apple-touch-icon-precomposed" href="{{ "/apple-touch-icon-precomposed.png" | url | absoluteUrl(config.baseUrl) }}"/>
        <link rel="manifest" href="{{ "/site.webmanifest" | url | absoluteUrl(config.baseUrl) }}"/>

        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Dancing+Script" />
        <link rel="stylesheet" href="{{ "/css/site.css" | url | absoluteUrl(config.baseUrl) }}"/>

        <script type="text/javascript">
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-101942881-1', 'auto');
            ga('send', 'pageview');
        </script>
    </head>

    <body class="{{ bodyClass }}">
        <header>
            <div class="inner">
                <h1><a href="{{ "/" | url | absoluteUrl(config.baseUrl) }}">{{ site.title }}</a></h1>

                {% include "navigation.njk" %}
            </div>
        </header>

        <main class="content">
            <div class="inner">
                {{ content | safe }}
            </div>
        </main>

        <footer>
            <p>Art &#38; Sculpture by Victoria Kuc</p>
            <small>© 1983–2020</small>
        </footer>

        <script src="{{ "/js/manifest.js" | url }}"></script>
        <script src="{{ "/js/vendor.js" | url }}"></script>
        <script src="{{ "/js/site.js" | url }}"></script>
    </body>
</html>
